<openerp>
    <data>
        
        <record id="res_company_view_form" model="ir.ui.view">
            <field name="name">res.company.view.form</field>
            <field name="model">res.company</field>
            <field name='inherit_id' ref='base.view_company_form'/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Bank Accounts']" position="before">
                    <group name="SFax Adapters">
                        <field name="sfax_adapter_ids" widget="select">
                            <form name="SFax Adapter">
                                <group name="Auth/Encryption">
                                    <field name="username"/>
                                    <field name="encrypt_key"/>
                                    <field name="vector"/>
                                </group>
                                <group name="App Specific">
                                    <field name="uri"/>
                                    <field name="app_id"/>
                                    <field name="client_ip"/>
                                </group>
                            </form>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>