<openerp>
    <data>
        
        <record id="fax_adapter_form" model="ir.ui.view">
            <field name="name">Adapter</field>
            <field name="model">fax.adapter</field>
            <field name="arch" type="xml">
                <form string="Fax Adapters">
                    <group>
                        <field name="name"/>
                        <field name="adapter_model_id"/>
                        <field name="adapter_pk"/>
                        <field name="adapter_name"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="fax_adapter_tree" model="ir.ui.view">
            <field name="name">Adapters</field>
            <field name="model">fax.adapter</field>
            <field name="arch" type="xml">
                <tree string="Fax Adapters">
                    <field name="name"/>
                    <field name="adapter_model_id"/>
                    <field name="adapter_pk"/>
                    <field name="adapter_name"/>
                </tree>
            </field>
        </record>
        
        <record id="fax_adapter_action" model="ir.actions.act_window">
            <field name="name">Adapters</field>
            <field name="res_model">fax.adapter</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
    </data>
</openerp>
